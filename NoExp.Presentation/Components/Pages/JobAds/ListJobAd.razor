@using NoExp.Domain.Entities
@using NoExp.Domain.Enums.JobAd

<MudDataGrid T="JobAd" Items="@jobAds" Hover="true" Striped="true" Bordered="true" Dense="true">
    <Columns>
        <PropertyColumn Property="x => x.Title" Title="Title" />
        <PropertyColumn Property="x => x.Location" Title="Location" />
        <PropertyColumn Property="x => x.WorkType" Title="Work Type" />
        <PropertyColumn Property="x => x.WorkMode" Title="Work Mode" />
        <PropertyColumn Property="x => x.SalaryMin" Title="Min Salary" />
        <PropertyColumn Property="x => x.SalaryMax" Title="Max Salary" />
        <PropertyColumn Property="x => x.ExpirationDate" Title="Expiration Date" />
        <PropertyColumn Property="x => x.WorkStatus" Title="Status" />
    </Columns>
</MudDataGrid>

