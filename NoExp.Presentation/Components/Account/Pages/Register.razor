@page "/Account/Register"
@rendermode InteractiveServer
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using NoExp.Application.Interfaces
@using NoExp.Domain.Entities
@using NoExp.Domain.Entities.Abstracts
@using NoExp.Infrastructure.Persistence
@using FluentValidation
@using MudSeverity = MudBlazor.Severity

@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject IUserStore<ApplicationUser> UserStore
@inject SignInManager<ApplicationUser> SignInManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject ILogger<Register> Logger
@inject NavigationManager NavigationManager
@inject IProfileService ProfileService
@inject ISnackbar Snackbar

<PageTitle>Register</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="register-container">
    <MudPaper Class="register-form-paper" Elevation="0">
        <MudForm @ref="form" Model="Input" Validation="@(validator.ValidateValue)">
            <MudStack Spacing="4">
                <!-- User Type Selection at the top -->
                <div class="user-type-section">
                    <MudText Typo="Typo.h6" Class="user-type-title">Register as...</MudText>
                    
                    <MudStack Row="true" Spacing="4" Justify="Justify.Center" Class="user-type-buttons">
                        <MudButton Variant="Variant.Outlined" 
                                   Class="@GetUserTypeClass("Candidate")" 
                                   OnClick="@(() => SelectUserType("Candidate"))" 
                                   DisableElevation="false" 
                                   Style="@GetButtonStyle("Candidate")">
                            <MudStack AlignItems="AlignItems.Center" Spacing="2">
                                <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" />
                                <MudText Typo="Typo.body1">Candidate</MudText>
                            </MudStack>
                        </MudButton>

                        <MudButton Variant="Variant.Outlined" 
                                   Class="@GetUserTypeClass("Employer")" 
                                   OnClick="@(() => SelectUserType("Employer"))" 
                                   DisableElevation="false" 
                                   Style="@GetButtonStyle("Employer")">
                            <MudStack AlignItems="AlignItems.Center" Spacing="2">
                                <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Large" />
                                <MudText Typo="Typo.body1">Employer</MudText>
                            </MudStack>
                        </MudButton>
                    </MudStack>
                    
                    @if (!string.IsNullOrEmpty(_userTypeError))
                    {
                        <MudText Color="Color.Error" Typo="Typo.body2" Class="mt-2 text-center">@_userTypeError</MudText>
                    }
                </div>
                
                <MudDivider Class="my-2"/>
                
                <!-- Email Field -->
                <MudTextField @bind-Value="Input.Email" 
                              Label="E-mail" 
                              Variant="Variant.Outlined"
                              For="@(() => Input.Email)"
                              InputType="InputType.Email"
                              AutoComplete="username"
                              DebounceInterval="300"
                              Class="register-input"/>
                
                <!-- Password Field -->
                <MudTextField @bind-Value="Input.Password" 
                              Label="Password" 
                              Variant="Variant.Outlined"
                              For="@(() => Input.Password)"
                              InputType="@PasswordInputType"
                              AutoComplete="new-password"
                              Adornment="Adornment.End"
                              AdornmentIcon="@PasswordIcon"
                              OnAdornmentClick="TogglePasswordVisibility"
                              DebounceInterval="300"
                              Class="register-input"/>
                
                <!-- Confirm Password Field -->
                <MudTextField @bind-Value="Input.ConfirmPassword" 
                              Label="Re-type password" 
                              Variant="Variant.Outlined"
                              For="@(() => Input.ConfirmPassword)"
                              InputType="@ConfirmPasswordInputType"
                              AutoComplete="new-password"
                              Adornment="Adornment.End"
                              AdornmentIcon="@ConfirmPasswordIcon"
                              OnAdornmentClick="ToggleConfirmPasswordVisibility"
                              DebounceInterval="300"
                              Class="register-input"/>
                
                <!-- Submit Button -->
                <MudButton OnClick="@OnValidSubmitAsync"
                           Variant="Variant.Outlined" 
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Large"
                           Class="register-button"
                           Disabled="@_isSubmitting">
                    @if (_isSubmitting)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2"/>
                        <span>Creating account...</span>
                    }
                    else
                    {
                        <span>Register</span>
                    }
                </MudButton>
                
                <MudDivider Class="my-2"/>
                
                <!-- External Login -->
                <div class="external-login-section">
                    <MudText Typo="Typo.subtitle1" Align="Align.Center">Use another service to register</MudText>
                    <ExternalLoginPicker/>
                </div>
            </MudStack>
        </MudForm>
    </MudPaper>
</MudContainer>

@code {
    private MudForm? form;
    private InputModelValidator? _validator;
    private InputModelValidator validator => _validator ??= new InputModelValidator(UserManager);
    private IEnumerable<IdentityError>? identityErrors;
    private bool _isSubmitting = false;
    private string _userTypeError = string.Empty;

    private bool _showPassword = false;
    private bool _showConfirmPassword = false;

    [SupplyParameterFromForm] public InputModel Input { get; set; } = new();

    [SupplyParameterFromQuery] private string? ReturnUrl { get; set; }

    private InputType PasswordInputType => _showPassword ? InputType.Text : InputType.Password;
    private string PasswordIcon => _showPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff;

    private InputType ConfirmPasswordInputType => _showConfirmPassword ? InputType.Text : InputType.Password;
    private string ConfirmPasswordIcon => _showConfirmPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff;

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
    }

    private void ToggleConfirmPasswordVisibility()
    {
        _showConfirmPassword = !_showConfirmPassword;
    }

    private void SelectUserType(string userType)
    {
        Input.Profile = userType;
        _userTypeError = string.Empty;
        StateHasChanged();
    }

    private string GetUserTypeClass(string userType)
    {
        return Input.Profile == userType ? "user-type-button selected" : "user-type-button";
    }

    private string GetButtonStyle(string userType)
    {
        bool isSelected = Input.Profile == userType;
        
        if (isSelected)
        {
            return "min-width:0; border: 2px solid #1b6ec2; border-radius: 16px; padding: 1.5rem 2rem; " +
                   "background: linear-gradient(135deg, rgba(27, 110, 194, 0.1) 0%, rgba(37, 140, 251, 0.1) 100%); " +
                   "box-shadow: 0 4px 16px rgba(27, 110, 194, 0.3); text-transform: none;";
        }
        
        return "min-width:0; border: 2px solid rgba(27, 110, 194, 0.3); border-radius: 16px; padding: 1.5rem 2rem; " +
               "background: rgba(255, 255, 255, 0.95); box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08); text-transform: none;";
    }

    private static string GetRoleName(string profileType)
    {
        return profileType switch
        {
            "Candidate" => "CandidateRole",
            "Employer" => "EmployerRole",
            _ => throw new ArgumentException($"Invalid user type: {profileType}", nameof(profileType))
        };
    }

    private static UserProfile CreateProfile(string profileType, string userId)
    {
        return profileType switch
        {
            "Candidate" => new CandidateProfile
            {
                Id = Guid.NewGuid().ToString(),
                UserId = userId
            },
            "Employer" => new EmployerProfile
            {
                Id = Guid.NewGuid().ToString(),
                UserId = userId
            },
            _ => throw new ArgumentException($"Invalid user type: {profileType}", nameof(profileType))
        };
    }

    private async Task OnValidSubmitAsync()
    {
        // Validate the form
        if (form == null)
        {
            return;
        }

        await form.Validate();
        
        var validationResult = await validator.ValidateAsync(Input);
        
        if (!validationResult.IsValid)
        {
            // Don't show validation errors in snackbar - they're already shown inline under each field
            // Only set the user type error for display below the buttons
            var profileError = validationResult.Errors.FirstOrDefault(e => e.PropertyName == nameof(Input.Profile));
            if (profileError != null)
            {
                _userTypeError = profileError.ErrorMessage;
            }
            
            return;
        }

        _isSubmitting = true;
        _userTypeError = string.Empty;
        
        try
        {
            var user = CreateUser();

            await UserStore.SetUserNameAsync(user, Input.Email, CancellationToken.None);
            var emailStore = GetEmailStore();
            await emailStore.SetEmailAsync(user, Input.Email, CancellationToken.None);
            
            // Create the user first
            var result = await UserManager.CreateAsync(user, Input.Password);

            if (!result.Succeeded)
            {
                // Show Identity errors in Snackbar (server-side errors)
                identityErrors = result.Errors;
                foreach (var error in result.Errors)
                {
                    Snackbar.Add(error.Description, MudSeverity.Error);
                }
                _isSubmitting = false;
                return;
            }

            // User is now saved to database, assign role
            var roleName = GetRoleName(Input.Profile);

            if (!await RoleManager.RoleExistsAsync(roleName))
            {
                await RoleManager.CreateAsync(new IdentityRole(roleName));
            }

            await UserManager.AddToRoleAsync(user, roleName);

            // Create the profile after user is saved
            var profile = CreateProfile(Input.Profile, user.Id);
            user.UserProfile = profile;

            await ProfileService.SaveProfileAsync(profile);

            Logger.LogInformation("User created a new account with password.");

            var userId = await UserManager.GetUserIdAsync(user);
            var code = await UserManager.GenerateEmailConfirmationTokenAsync(user);
            code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));
            var callbackUrl = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("Account/ConfirmEmail").AbsoluteUri,
                new Dictionary<string, object?> { ["userId"] = userId, ["code"] = code, ["returnUrl"] = ReturnUrl });

            await EmailSender.SendConfirmationLinkAsync(user, Input.Email, HtmlEncoder.Default.Encode(callbackUrl));

            // Success message in Snackbar
            Snackbar.Add("Account created successfully!", MudSeverity.Success);

            if (UserManager.Options.SignIn.RequireConfirmedAccount)
            {
                var confirmationUrl = NavigationManager.GetUriWithQueryParameters(
                    "Account/RegisterConfirmation",
                    new Dictionary<string, object?> { ["email"] = Input.Email, ["returnUrl"] = ReturnUrl });
                NavigationManager.NavigateTo(confirmationUrl);
                return;
            }

            await SignInManager.SignInAsync(user, false);
            NavigationManager.NavigateTo(ReturnUrl ?? "/");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during user registration");
            // Generic error in Snackbar (server-side/unexpected errors)
            Snackbar.Add("An error occurred during registration. Please try again.", MudSeverity.Error);
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private ApplicationUser CreateUser()
    {
        try
        {
            return Activator.CreateInstance<ApplicationUser>();
        }
        catch
        {
            throw new InvalidOperationException($"Can't create an instance of '{nameof(ApplicationUser)}'. " +
                                                $"Ensure that '{nameof(ApplicationUser)}' is not an abstract class and has a parameterless constructor.");
        }
    }

    private IUserEmailStore<ApplicationUser> GetEmailStore()
    {
        if (!UserManager.SupportsUserEmail)
        {
            throw new NotSupportedException("The default UI requires a user store with email support.");
        }

        return (IUserEmailStore<ApplicationUser>)UserStore;
    }

    // Input Model
    public sealed class InputModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
        public string Profile { get; set; } = string.Empty;
    }

    // FluentValidation Validator
    private class InputModelValidator : AbstractValidator<InputModel>
    {
        public InputModelValidator(UserManager<ApplicationUser> userManager)
        {
            // User Type Validation
            RuleFor(x => x.Profile)
                .NotEmpty()
                .WithMessage("Please select a user type (Candidate or Employer)")
                .Must(x => x == "Candidate" || x == "Employer")
                .WithMessage("Invalid user type selected");

            // Email Validation
            RuleFor(x => x.Email)
                .NotEmpty()
                .WithMessage("Email is required")
                .EmailAddress()
                .WithMessage("Please enter a valid email address")
                .MaximumLength(256)
                .WithMessage("Email must not exceed 256 characters");

            // NOTE: The following password rules are dynamically set based on UserManager.Options.Password.
            var passwordOptions = userManager.Options.Password;
            RuleFor(x => x.Password)
                .NotEmpty()
                .WithMessage("Password is required")
                .MinimumLength(passwordOptions.RequiredLength)
                .WithMessage($"Password must be at least {passwordOptions.RequiredLength} characters long")
                .MaximumLength(passwordOptions.RequiredLength > 100 ? passwordOptions.RequiredLength : 100)
                .WithMessage($"Password must not exceed {(passwordOptions.RequiredLength > 100 ? passwordOptions.RequiredLength : 100)} characters");
            if (passwordOptions.RequireUppercase)
            {
                RuleFor(x => x.Password)
                    .Matches(@"[A-Z]")
                    .WithMessage("Password must contain at least one uppercase letter");
            }
            if (passwordOptions.RequireLowercase)
            {
                RuleFor(x => x.Password)
                    .Matches(@"[a-z]")
                    .WithMessage("Password must contain at least one lowercase letter");
            }
            if (passwordOptions.RequireDigit)
            {
                RuleFor(x => x.Password)
                    .Matches(@"[0-9]")
                    .WithMessage("Password must contain at least one number");
            }
            if (passwordOptions.RequireNonAlphanumeric)
            {
                RuleFor(x => x.Password)
                    .Matches(@"[\W_]")
                    .WithMessage("Password must contain at least one special character");
            }

            // Confirm Password Validation
            RuleFor(x => x.ConfirmPassword)
                .NotEmpty()
                .WithMessage("Password confirmation is required")
                .Equal(x => x.Password)
                .WithMessage("The password and confirmation password do not match");
        }

        public Func<object, string, Task<IEnumerable<string>>> ValidateValue => async (model, propertyName) =>
        {
            var result = await ValidateAsync(ValidationContext<InputModel>
                .CreateWithOptions((InputModel)model, x => x.IncludeProperties(propertyName)));
            
            if (result.IsValid)
                return Array.Empty<string>();
            
            return result.Errors.Select(e => e.ErrorMessage);
        };
    }
}
